<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Groovy_Llamma.MainPage">

    <StackLayout Padding="10" Spacing="20">
        <Frame BackgroundColor="SaddleBrown" Padding="24" CornerRadius="0">
            <Label Text="Groovy Llamma" HorizontalTextAlignment="Center" TextColor="Black" FontSize="36"/>
        </Frame>
        <Button Text="{Binding CommandText}"
				Command="{Binding PlayPauseCommand}" />
    </StackLayout>

</ContentPage>
